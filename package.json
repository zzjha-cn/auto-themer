{
  "name": "auto-themer",
  "displayName": "Auto Themer",
  "description": "Automatically assign different color themes to VSCode windows for easy distinction",
  "version": "0.9.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "icon": "public/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/zzjha-cn/auto-themer.git"
  },
  "publisher": "seanz-hahaha",
  "categories": [
    "Other"
  ],
  "keywords": [
    "Theme",
    "Auto",
    "Window",
    "Switch"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "autoThemer.enable",
        "title": "Auto Themer: Enable"
      },
      {
        "command": "autoThemer.disable",
        "title": "Auto Themer: Disable"
      },
      {
        "command": "autoThemer.switchTheme",
        "title": "Auto Themer: Switch Theme"
      },
      {
        "command": "autoThemer.reassignTheme",
        "title": "Auto Themer: Reassign Theme for Current Window"
      },
      {
        "command": "autoThemer.showThemeMappings",
        "title": "Auto Themer: Show Theme Mappings"
      },
      {
        "command": "autoThemer.persistCurrentTheme",
        "title": "Auto Themer: Persist Current Theme for Workspace"
      },
      {
        "command": "autoThemer.pickStatusBarScheme",
        "title": "Auto Themer: Pick Status Bar Scheme"
      },
      {
        "command": "autoThemer.persistStatusBarLabel",
        "title": "Auto Themer: Persist Status Bar Label"
      },
      {
        "command": "autoThemer.nextStatusBarScheme",
        "title": "Auto Themer: Next Status Bar Scheme"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "autoThemer",
          "title": "Auto Themer",
          "icon": "$(color-mode)"
        }
      ]
    },
    "views": {
      "autoThemer": [
        {
          "type": "webview",
          "id": "autoThemer.view",
          "name": "Auto Themer"
        }
      ]
    },
    "configuration": {
      "title": "Auto Themer",
      "properties": {
        "autoThemer.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic theme switching"
        },
        "autoThemer.builtinThemes": {
          "type": "array",
          "default": [],
          "description": "Built-in themes to cycle through"
        },
        "autoThemer.windowsThreshold": {
          "type": "number",
          "default": 1,
          "description": "Only active switching when windows count over this threshold"
        },
        "autoThemer.enableConflictDetection": {
          "type": "boolean",
          "default": true,
          "description": "Enable theme conflict detection"
        },
        "autoThemer.conflictResolution": {
          "type": "string",
          "enum": [
            "theme",
            "statusBar"
          ],
          "default": "theme",
          "description": "How to resolve theme conflicts, distinct by theme or status bar"
        },
        "autoThemer.themeMappingsText": {
          "type": "string",
          "default": "",
          "description": "Workspace→Theme mappings as text; format: /path: Theme; /path2/pro2: Theme2"
        },
        "autoThemer.statusBarMappingsText": {
          "type": "string",
          "default": "",
          "description": "Workspace→Status bar scheme as text; format: /path: SchemeName"
        }
      }
    },
    "keybindings": [
      {
        "command": "autoThemer.randomTheme",
        "key": "ctrl+alt+t",
        "mac": "cmd+alt+t",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "^16.x",
    "typescript": "^4.4.3",
    "@vscode/vsce": "^2.15.0"
  }
}
